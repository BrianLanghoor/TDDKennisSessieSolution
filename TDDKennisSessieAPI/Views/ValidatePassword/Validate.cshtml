@model TDDKennisSessieAPI.Models.ValidatePasswordViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Validated Password</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IsValid)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsValid)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ErrorMessages)
        </dt>

        <dd>
            @foreach (var message in Model.ErrorMessages)
            {
                @Html.DisplayFor(m => message)
                <br>
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back", "Index")
</p>
